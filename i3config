# blue gruvbox
# class                 border|backgr|text|indicator|child_border
client.focused          $yellow $yellow $darkgray $yellow $yellow
client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
client.urgent           $red $red $white $red $red

popup_during_fullscreen smart

# Move the current workspace to the next output
# (effectively toggles when you only have two outputs)
bindsym $mod+p move workspace to output right

# Default border for new windows
default_border pixel

# Hides edge borders when a window is fullscreen
hide_edge_borders smart

# Dosen't allow pop ups to capture focus
no_focus [window_role="pop-up"]

# Compositor
exec_always --no-startup-id picom -f

# Assigns workspaces to monitors
#workspace "10X" output eDP1
#workspace "1I" output HDMI1

# Stops focus follows mouse
focus_follows_mouse no

# Workspace auto back and forth
# Ex. you switch from workspace 1 to workspace 2.
# Now you have to just press mod 2 again to return to workspace 1
workspace_auto_back_and_forth yes

# Force Display Urgency hint
force_display_urgency_hint 2000 ms

# Display lock
bindsym $mod+x exec i3lock

# Starts Mozilla FireFox(TM)
bindsym $mod+b exec firefox

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	# Shows tray icons on the external (HDMI1) monitor
	tray_output HDMI1
	# Disable clicking on workspace buttons
	bindsym button1 nop
	# Bar id (to identify the bar)
	id cooltopbar
	i3bar_command i3bar --transparency
	strip_workspace_numbers yes
	# workspace_min_width 40
	separator_symbol "|"
	position top
        status_command i3status
	colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $yellow
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $green $green $darkgray
        inactive_workspace   $darkgray $darkgray $yellow
        active_workspace     $darkgray $darkgray $yellow
        urgent_workspace     $red $red $blue
    }
}
